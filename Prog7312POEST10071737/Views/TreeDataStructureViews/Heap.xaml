<UserControl
    x:Class="Prog7312POEST10071737.Views.TreeDataStructureViews.Heap"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Prog7312POEST10071737.Views.TreeDataStructureViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MinWidth="475"
    MinHeight="395"
    Background="Transparent"
    mc:Ignorable="d">
    <Grid>
        <ListView x:Name="ReportsListView" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="300"
                        DisplayMemberBinding="{Binding Name}"
                        Header="Report Name" />
                    <GridViewColumn
                        Width="100"
                        DisplayMemberBinding="{Binding SubscriberCount}"
                        Header="Subscribers" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
